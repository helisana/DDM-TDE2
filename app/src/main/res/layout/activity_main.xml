<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
  <Button
      android:text="@string/main_btn_camera"
      android:layout_width="0dp"
      android:layout_height="wrap_content" android:id="@+id/main_btn_camera"
      app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="288dp"
      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="24dp" android:layout_marginEnd="24dp" app:layout_constraintHorizontal_bias="0.0"
      android:onClick="handleBtnCamera"/>
  <Button
      android:text="@string/main_btn_galeria"
      android:layout_width="0dp"
      android:layout_height="wrap_content" android:id="@+id/main_btn_galeria"
      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp" android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp" app:layout_constraintVertical_bias="0.512" android:onClick="handleBtnGaleria"/>

</androidx.constraintlayout.widget.ConstraintLayout>